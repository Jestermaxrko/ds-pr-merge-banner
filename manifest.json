{
  "manifest_version": 3,
  "name": "GitHub Merge Warning",
  "version": "1.0.0",
  "description": "Shows a banner before merging a PR on GitHub",
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}